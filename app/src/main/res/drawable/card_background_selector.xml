<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected State: White Background, Green Border -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@android:color/white"/>
            <stroke android:color="@color/green" android:width="2dp"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Unselected State: Gray Background, White Border -->
    <item>
        <shape>
            <solid android:color="#1E1E1E"/>  <!-- Gray Background -->
            <stroke android:color="@android:color/white" android:width="1dp"/> <!-- White Border -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

</selector>

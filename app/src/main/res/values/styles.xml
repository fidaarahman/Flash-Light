<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomSlider" parent="Widget.MaterialComponents.Slider">
        <!-- Track (Line) Colors -->
        <item name="trackColorInactive">@color/white</item> <!-- Line before the thumb -->
        <item name="trackColorActive">@color/white</item> <!-- Line after the thumb -->

        <!-- Thumb (Handle) Color -->
        <item name="thumbColor">#00FF11</item>

        <!-- Halo (Ripple when touching) -->
        <item name="haloColor">#00FF11</item>
    </style>

    <style name="TransparentBottomSheetDialog" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>



</resources>
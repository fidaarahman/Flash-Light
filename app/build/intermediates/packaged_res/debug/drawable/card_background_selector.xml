<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected State: White Background, Green Border -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@android:color/white" />
            <stroke android:width="2dp" android:color="@color/colorPink" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Unselected State: Gray Background, White Border -->
    <item>
        <shape>
            <solid android:color="#1E1E1E" />  <!-- Gray Background -->
            <stroke android:width="1dp" android:color="@android:color/white" /> <!-- White Border -->
            <corners android:radius="16dp" />
        </shape>
    </item>

</selector>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#424242"
    android:padding="16dp">


    <!-- Title -->
    <TextView
        android:id="@+id/tvModeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mode"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@android:color/white"
        android:paddingBottom="12dp" />

    <LinearLayout
        android:id="@+id/llRhythmFlash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/llContinuousFlash"
    android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/sos_icone"
            android:layout_marginEnd="12dp"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rhythm"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/ivCheckRhythm"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ok_icone"
            android:visibility="gone"
            app:tint="@color/green" />
    </LinearLayout>
    <LinearLayout
                android:id="@+id/llContinuousFlash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/tvModeTitle"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/flash_icone2"
                    android:layout_marginEnd="12dp"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/continuous"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/ivCheckContinuous"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ok_icone"
                    android:visibility="gone"/>
            </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>
